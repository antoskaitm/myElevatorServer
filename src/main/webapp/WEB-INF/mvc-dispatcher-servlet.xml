<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd   http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:component-scan base-package="main.*"/>
    <context:property-placeholder location="classpath:properties.properties"/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean class="main.entities.primitive.FloorsRange" id="floorsRange">
        <constructor-arg name="groundFloor" value="${groundFloor}"/>
        <constructor-arg name="lastFloor" value="${lastFloor}"/>
    </bean>

    <bean class="main.entities.PersonElevatorRoom" id ="personElevatorRoom">
        <constructor-arg name="elevatorRoom" ref="elevatorRoom"/>
    </bean>

    <bean id="building" class="main.entities.primitive.Building">
        <constructor-arg name="floorsRange" ref="floorsRange"/>
        <constructor-arg name="buildingHeight" value="40"/>
        <constructor-arg name="elevators" ref="personElevatorRoom"/>
    </bean>

    <bean class="main.entities.primitive.general.BitSet" name="elevatorCalls">
        <constructor-arg name="lowerBound" value="${groundFloor}"/>
        <constructor-arg name="length" value="${floorCount}"/>
    </bean>


    <bean id="elevatorCondition" class="main.entities.primitive.ElevatorCondition">
        <constructor-arg name="callPoints" ref="elevatorCalls"/>
        <constructor-arg name="floorsRange" ref="floorsRange"/>
    </bean>

    <bean class="main.entities.primitive.Room" name="room">
        <constructor-arg name="size" value="3"/>
    </bean>
    <bean id="elevatorRoom" class="main.entities.ElevatorRoom">
        <constructor-arg name="elevatorCondition" ref="elevatorCondition"/>
        <constructor-arg name="room" ref="room"/>
    </bean>

    <bean id="dao" class="main.dao.DaoObject">
        <constructor-arg name="object" ref="building"/>
    </bean>

    <bean class="main.emulator.panel.ElevatorGeneralController" id="generalServicePanel">
        <constructor-arg name="dao" ref="dao"/>
    </bean>

    <bean id="elevatorController" class="main.servlets.ElevatorController" scope="singleton">
        <constructor-arg name="panel" ref="generalServicePanel"/>
    </bean>

    <mvc:default-servlet-handler/>
    <mvc:annotation-driven/>

</beans>